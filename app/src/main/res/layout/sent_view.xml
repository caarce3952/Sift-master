<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Date Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/item_s_date"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_s_subject"
        android:textSize="20dp"
        android:layout_below="@+id/item_s_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Recipient(s) shown here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_s_recipient"
        android:layout_below="@+id/item_s_subject"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Start of message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_s_message"
        android:layout_below="@+id/item_s_recipient"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>